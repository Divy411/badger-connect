<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/choose_connection_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Choose Your Connection"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/mentor_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_connection_text"
        android:layout_marginTop="16dp"
        android:text="Mentor"
        android:textSize="20dp"/>

    <CheckBox
        android:id="@+id/mentee_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mentor_checkbox"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:text="Mentee" />

    <CheckBox
        android:id="@+id/study_buddy_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mentee_checkbox"
        android:layout_marginTop="16dp"
        android:text="Study Buddy"
        android:textSize="20dp"
        android:visibility="visible"/>
</RelativeLayout>