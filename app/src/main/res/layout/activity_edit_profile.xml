<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="16dp">
        <ImageView android:id="@+id/profile_picture" android:layout_width="240dp" android:layout_height="240dp" android:src="@drawable/portrait_placeholder" android:layout_gravity="center_horizontal"/>
        <TextView android:id="@+id/name_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Name:"/>
        <EditText android:id="@+id/name_field" android:layout_width="match_parent" android:layout_height="35dp" android:background="@drawable/custom_edit_text_cut" android:enabled="false" android:text="Firstname Lastname" android:gravity="center"/>
        <TextView android:id="@+id/major_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Major:"/>
        <EditText android:id="@+id/major_field" android:layout_width="match_parent" android:layout_height="35dp" android:background="@drawable/custom_edit_text_cut" android:gravity="center" android:text="Major" android:enabled="false"/>
        <TextView android:id="@+id/birthdate_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Birthdate:"/>
        <EditText android:id="@+id/birthdate_field" android:layout_width="match_parent" android:layout_height="35dp" android:background="@drawable/custom_edit_text_cut" android:inputType="date" android:gravity="center" android:text="03/01/2001" android:enabled="false"/>
    </LinearLayout>
</ScrollView>